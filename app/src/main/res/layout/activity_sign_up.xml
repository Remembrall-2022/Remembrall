<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rememberall.remembrall.user.SignUpWithEmailActivity"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="56dp"
        android:layout_marginHorizontal="27dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/maki_arrow" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_sign_up"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingRight="25dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_marginTop="40dp">
            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/et_round_border"
                android:hint="@string/et_nickname"
                android:inputType="text"
                android:paddingLeft="10dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/et_email"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginVertical="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/et_round_border"
                    android:hint="@string/et_email"
                    android:inputType="textWebEmailAddress"
                    android:paddingLeft="10dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_auth_request"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginVertical="10dp"
                    android:background="@drawable/btn_round_border"
                    android:gravity="center"
                    android:text="인증요청"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_auth_verify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                android:layout_marginBottom="10dp"
                >
                <EditText
                    android:id="@+id/et_auth_num"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:background="@drawable/et_round_border"
                    android:layout_weight="1"
                    android:hint="인증번호 입력"
                    android:inputType="text"
                    android:paddingLeft="10dp" />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_auth_verify"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/btn_round_border"
                    android:gravity="center"
                    android:text="확인"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_auth_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="right"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:visibility="gone">
                <TextView
                    android:id="@+id/tv_auth_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00"
                    android:textColor="@color/black"/>
            </LinearLayout>
            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/et_round_border"
                android:hint="@string/et_password"
                android:inputType="textPassword"
                android:paddingLeft="10dp" />
            <TextView
                android:id="@+id/tv_sign_up_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textColor="@color/rememberall_red"
                android:textSize="14sp"
                android:layout_marginRight="10dp"
                android:layout_marginVertical="5dp"/>
            <android.widget.Button
                android:id="@+id/btn_sign_up"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:background="@drawable/btn_round_border"
                android:text="회원가입"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>