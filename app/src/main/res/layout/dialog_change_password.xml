<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="12dp"
    android:paddingVertical="12dp"
    android:background="@drawable/login_background">

    <LinearLayout
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp">
        <ImageButton
            android:id="@+id/btn_close"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/close" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginHorizontal="10dp"
        android:text="비밀번호 변경하기"
        android:textColor="@color/rememberall_navy"
        android:textSize="24dp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="25dp"
        android:text="가입한 이메일로 인증번호를 전송합니다."
        android:textColor="@color/rememberall_mauve"
        android:textSize="16dp"
        android:layout_marginHorizontal="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="10dp">

        <EditText
            android:id="@+id/et_authcode"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginVertical="10dp"
            android:layout_weight="1"
            android:background="@drawable/et_round_border"
            android:hint="인증번호"
            android:inputType="textWebEmailAddress"
            android:paddingLeft="10dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_auth_request"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/btn_round_border"
            android:gravity="center"
            android:text="인증요청"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="bold" />
    </LinearLayout>

    <EditText
        android:id="@+id/et_new_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_marginHorizontal="10dp"
        android:hint="새 비밀번호"
        android:importantForAutofill="no"
        android:background="@drawable/et_round_border"
        android:inputType="text" />
    <Button
        android:id="@+id/btn_change_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/btn_round_border"
        android:text="비밀번호 변경하기"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:textStyle="bold" />
</LinearLayout>