<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.SignUpLoginActivity"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginHorizontal="27dp"
        android:layout_marginTop="56dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:background="@drawable/maki_arrow" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_login"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingRight="25dp"
                />
        </LinearLayout>
        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/et_round_border"
            android:hint="@string/et_email"
            android:inputType="textWebEmailAddress"
            android:layout_marginTop="40dp"
            android:paddingLeft="10dp" />
        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/et_round_border"
            android:hint="@string/et_password"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:layout_marginTop="12dp"/>
        <TextView
            android:id="@+id/tv_login_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textColor="@color/rememberall_red"
            android:textSize="14sp"
            android:layout_marginVertical="5dp"/>
        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_round_border"
            android:text="@string/btn_login"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginTop="30dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/subtitle_sns_login"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_marginTop="42dp"
            />
        <ImageView
            android:id="@+id/btn_login_kakao"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_kakao_circle"
            android:layout_marginTop="30dp"
            />
        <LinearLayout
            android:id="@+id/btnLogin_sign_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="24dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/msg_sign_up"
                android:textColor="@color/rememberall_purple"
                android:textSize="13sp"
                />
            <Button
                android:layout_width="66dp"
                android:layout_height="22dp"
                android:background="@drawable/btn_sign_up_border"
                android:text="@string/btn_sign_up"
                android:textColor="@color/rememberall_purple"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>