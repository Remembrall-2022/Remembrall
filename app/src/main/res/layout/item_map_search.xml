<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="20dp"
    android:layout_marginVertical="10dp"
    android:orientation="vertical">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/iv_image_map_search"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/backgrounds/scenic"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/linearlayout_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            app:layout_constraintTop_toBottomOf="@+id/tv_place_name_map_search">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_margin="3dp"
                    android:background="@drawable/location"/>

                <TextView
                    android:id="@+id/tv_place_name_map_search"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="국립중앙박물관"
                    android:textColor="@color/rememberall_navy"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@+id/iv_image_map_search"
                    tools:layout_editor_absoluteX="0dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_category_map_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="박물관"
                android:textSize="12dp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:paddingHorizontal="10dp"
                android:paddingVertical="3dp"
                android:textColor="@color/white"
                android:background="@drawable/round_border_tag"/>
            <TextView
                android:id="@+id/tv_address_map_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="주소주소"
                android:textSize="12dp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                />

        </LinearLayout>

            <Button
                android:layout_width="60dp"
                android:layout_height="25dp"
                android:background="@drawable/btn_round_border"
                android:text="선택"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:layout_marginRight="5dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/rememberall_gray"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="5dp"/>






