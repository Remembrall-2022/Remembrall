<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="20dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:id="@+id/iv_map_search"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <TextView
        android:id="@+id/tv_place_name_map_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="국립중앙박물관"
        android:textSize="17dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/iv_map_search"
        tools:layout_editor_absoluteX="0dp" />
    <LinearLayout
        android:id="@+id/linearlayout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/tv_place_name_map_search">
        <TextView
            android:id="@+id/tv_category_map_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="박물관"
            android:textSize="12dp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"/>
        <TextView
            android:id="@+id/tv_address_map_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주소주소"
            android:textSize="12dp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/linearlayout_1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:background="@drawable/round_border_tag"
            android:text="#유익한"
            android:textSize="12dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:paddingHorizontal="10dp"
            android:layout_marginRight="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:background="@drawable/round_border_tag"
            android:text="#유익한"
            android:textSize="12dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:paddingHorizontal="10dp"
            android:layout_marginRight="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:background="@drawable/round_border_tag"
            android:text="#유익한"
            android:textSize="12dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:paddingHorizontal="10dp"
            android:layout_marginRight="10dp"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>